<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGroundDialog"
    android:id="@+id/bg_dialog"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/layout_gojobs_dialog"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_white_radius"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt ảnh hồ sơ"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <View
            android:id="@+id/v_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/tv_title"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />

        <TextView
            android:layout_below="@id/v_line1"
            android:id="@+id/tv_message_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mở Camera"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:lineHeight="@dimen/_20sdp"
            />

        <TextView
            android:layout_below="@id/tv_message_camera"
            android:id="@+id/tv_message_galary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mở Galary"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:lineHeight="@dimen/_20sdp"
            />

        <TextView
            android:layout_below="@id/tv_message_galary"
            android:id="@+id/tv_message_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa ảnh"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:lineHeight="@dimen/_20sdp"
            />

        <View
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/tv_message_delete"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
        <TextView
            android:id="@+id/tv_action_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:layout_below="@id/v_line2"
            />


    </RelativeLayout>
</RelativeLayout>

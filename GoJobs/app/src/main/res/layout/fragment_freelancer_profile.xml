<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar_freelancer_profile"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/avatar_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên"
                android:textColor="#FF9800"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/edt_name_freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8DB3AFAF"
                android:hint="Xuân"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="Email"
                android:textColor="#FF9800"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/edt_email_freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8DB3AFAF"
                android:hint="abc@gmail.com"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="SĐT"
                android:textColor="#FF9800"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/edt_sdt_freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8DB3AFAF"
                android:hint="0765782026"
                android:maxLength="11"
                android:inputType="phone"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="Học Vấn"
                android:textColor="#FF9800"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/edt_hoc_van_freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8DB3AFAF"
                android:hint="kĩ sư"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="Nghề nghiệp"
                android:textColor="#FF9800"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/edt_nghe_nghiep_freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8DB3AFAF"
                android:hint="Lập trình viên"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="Trình độ ngoại ngữ"
                android:textColor="#FF9800"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/edt_trinh_do_ngoai_ngu_freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8DB3AFAF"
                android:hint="Tiếng anh"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="Giới tính"
                android:textColor="#FF9800"
                android:textSize="@dimen/_12ssp" />

            <Spinner
                android:id="@+id/sp_gioi_tinh_freelancer"
                style="@android:style/Widget.Material.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8DB3AFAF"
                android:textColor="#787878"
                android:textSize="@dimen/_13ssp"
                tools:targetApi="lollipop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="Ngày sinh"
                android:textColor="#FF9800"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_ngay_sinh_freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8DB3AFAF"
                android:paddingTop="@dimen/_5sdp"
                android:text="01-01-2000"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="Địa chỉ"
                android:textColor="#FF9800"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/edt_dia_chi_freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8DB3AFAF"
                android:hint="Quận Hai, TP Vũng Tàu"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Tỉnh/TP"
                        android:textColor="#FF9800"
                        android:textSize="@dimen/_12ssp" />

                    <Spinner
                        android:id="@+id/sp_tinh"
                        style="@android:style/Widget.Material.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:backgroundTint="#8DB3AFAF"
                        android:textColor="#787878"
                        android:textSize="@dimen/_12ssp"
                        tools:targetApi="lollipop" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Quận/Huyện"
                    android:textColor="#FF9800"
                    android:textSize="@dimen/_12ssp" />

                <Spinner
                    android:id="@+id/sp_huyen"
                    style="@android:style/Widget.Material.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:backgroundTint="#8DB3AFAF"
                    android:textColor="#787878"
                    android:textSize="@dimen/_12ssp"
                    tools:targetApi="lollipop" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_finish_freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_btn_signup"
                android:drawableRight="@drawable/ic_forward_white"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_30sdp"
                android:text="Hoàn tất"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
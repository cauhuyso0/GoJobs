<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGroundDialog"
    android:id="@+id/bg_contract_dialog"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/layout_gojobs_dialog_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_40sdp"
        android:background="@drawable/background_white_radius"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt ảnh hồ sơ"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <View
            android:id="@+id/v_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/tv_title"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_line1"
            android:weightSum="2">
            <TextView

                android:id="@+id/tv_huy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textSize="@dimen/_15sdp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:lineHeight="@dimen/_20sdp"
                />
            <TextView

                android:id="@+id/tv_xac_nhan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Xác nhận"
                android:textSize="@dimen/_15sdp"
                android:textStyle="normal"
                android:layout_alignRight="@+id/tv_huy"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="center"
                android:lineHeight="@dimen/_20sdp"
                />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>

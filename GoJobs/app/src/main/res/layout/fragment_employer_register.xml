<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/header_sign_up_in_frag">

        <Button
            android:id="@+id/btnBackSignup_Employer"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/ic_back_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_70sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold"
                android:paddingLeft="@dimen/_30sdp"
                android:textColor="#f000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="@string/sign_in_for_employer"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </FrameLayout>

    <EditText
        android:id="@+id/edtEmail_EmployerSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="#787878"
        android:textSize="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_35sdp"
        android:background="@drawable/rounded_edt"
        android:elevation="@dimen/_2sdp"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/edtPassword_EmployerSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_35sdp"
        android:textSize="@dimen/_13sdp"
        android:inputType="textPassword"
        android:textColor="#787878"
        android:background="@drawable/rounded_edt"
        android:drawableLeft="@drawable/ic_key"
        android:drawablePadding="@dimen/_10sdp"
        android:elevation="@dimen/_2sdp"
        android:hint="@string/password"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_10ssp">
        <CheckBox
            android:id="@+id/cbTc_Employer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi chấp nhận"
            android:textColor="#000000"
            android:textSize="@dimen/_13sdp"
            />

        <TextView
            android:id="@+id/tvTc_Employer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Điều khoản dịch vụ"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:textSize="@dimen/_13sdp"
            android:textAllCaps="false"/>

    </LinearLayout>


    <Button
        android:id="@+id/btnSignup_Employer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_35sdp"
        android:background="@drawable/rounded_btn_signup"
        android:drawableRight="@drawable/ic_forward_white"
        android:text="@string/conti"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:gravity="center"
        android:text="@string/terms_of_service"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:layout_marginBottom="@dimen/_40sdp"
        android:paddingTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_login"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvIntentSignin_Employer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5sdp"
            android:text="@string/sign_in"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:textSize="@dimen/_13sdp"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
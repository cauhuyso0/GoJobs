<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:id="@+id/recharge_fragment"
    tools:context=".Fragment.WithdrawMoneyFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/colorAccent"
        android:id="@+id/tv_nap_tien_tk"
        android:gravity="center"
        android:text="Nạp tiền vào tài khoản"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Thông tin Admin"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Tên ngân hàng"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QKL 12354"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:enabled="false"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Số tài khoản"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12345679810"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:enabled="false"
                android:inputType="number"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Tên chủ tài khoản"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Gojob"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:paddingRight="@dimen/_5sdp"
                android:enabled="false"
                android:paddingBottom="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Số tiền"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5000000"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:inputType="number"
                android:enabled="false"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Nội dung chuyển khoản"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập email của bạn"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:enabled="false"
                android:inputType="number"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"/>

        </LinearLayout>


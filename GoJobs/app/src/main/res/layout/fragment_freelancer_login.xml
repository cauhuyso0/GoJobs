<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:background="@drawable/header_sign_up_in_frag"
                android:elevation="@dimen/_100sdp">

                <Button
                    android:id="@+id/btnBackSignin_Freelancer"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/ic_back_white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:elevation="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_30sdp"
                        android:text="@string/sign_in"
                        android:textColor="#f000"
                        android:textSize="@dimen/_25ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="@string/sign_in_for_freelancer"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />
                </LinearLayout>


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/btnLoginFacebook_Freelancer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_btn_facebook"
                    android:drawableLeft="@drawable/resize_ic_fb"
                    android:drawablePadding="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="ĐĂNG NHẬP"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="#FFFFFF" />

                <com.google.android.gms.common.internal.SignInButtonImpl
                    android:id="@+id/btnLoginGoogle_Freelancer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edt"
                    android:drawableLeft="@drawable/resize_ic_google"
                    android:drawablePadding="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Đăng nhập"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="#000000" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:text="@string/sign_in_with_email" />

            <EditText
                android:id="@+id/edtEmailSignin_Freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:background="@drawable/rounded_edt"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textColor="#787878"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/edtPasswordSignin_Freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:background="@drawable/rounded_edt"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textColor="#787878"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/btnSignin_Freelancer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:background="@drawable/rounded_btn_signup"
                android:drawableRight="@drawable/ic_forward_white"
                android:gravity="center"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_14ssp"
                android:elevation="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa có tài khoản?"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tvRegister_Freelancer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Đăng ký ngay!"
                    android:textAllCaps="false"
                    android:textColor="#F44336"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvResetPassword_Freelancer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_12sdp"
                android:text="Quên mật khẩu"
                android:textAllCaps="false"
                android:textColor="#2196F3"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>